root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,h,cpp,hpp,cc,cxx}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{vcxproj,vcxproj.filters,vcxproj.user,props,targets}]
indent_style = space
indent_size = 2

[*.sln]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf

[*.ps1]
indent_style = space
indent_size = 4

[{Makefile,makefile}]
indent_style = tab
