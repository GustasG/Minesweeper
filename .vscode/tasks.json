{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "detail": "Build the Minesweeper project using MSBuild",
      "command": "msbuild",
      "type": "shell",
      "args": [
        "${workspaceFolder}\\Minesweeper.sln",
        "/property:Configuration=Debug",
        "/property:Platform=x64",
        "/maxcpucount"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
